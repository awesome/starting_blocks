#!/usr/bin/env ruby

require File.expand_path(File.dirname(__FILE__) + '/../lib/starting_blocks.rb')

def display value
end

option_builder = StartingBlocks::OptionBuilder.new
options = option_builder.build ARGV

if options[:watch]
  StartingBlocks::Watcher.start_watching Dir, options
elsif options[:turn_light_off]
  StartingBlocks::Extensions::BlinkyLighting.turn_off!
else
  StartingBlocks::RunEverythingCommand.new(options).execute
end
